@model Product
@using Models
@{
    var user = Session["User"] as User;
    var product = Session["Product"] as Product;
}

@{
    ViewBag.Title = "ViewProductDetails";
}

@if (Session["Product"] == null)
{
    Response.Redirect("../Product/ViewProducts");
}

else
{

    <h2>Details</h2>

    <div>
        <h4>Product</h4>
        <hr />
        <table style="width:300px">
            <tr>
                <td>
                    <!-- Slideshow container -->

                    <div class="slideshow-container">

                        <!-- Full-width images with number and caption text -->

                        @for (int i = 0; i < Model.Picture.Count; i++)
                        {
                            <div class="mySlides ">
                                <img class="estate-image" src="@Url.Content(Model.Picture[i])" alt="Foto van dit object" />
                            </div>
                        }
                    </div>
                    <script src="~/Scripts/ScriptFile/Site.js"></script>
                    
                    <!-- The dots/circles -->

                    <div style="text-align:center " onclick="currentSlide(i)">
                        <!-- Next and previous buttons -->
                        <a class="prev" onclick="plusSlides(-1)">&#10094;</a>
                        <a class="next" onclick="plusSlides(1)">&#10095;</a>
                        @for (int i = 0; i < Model.Picture.Count; i++)
                        {
                            <div class="dot">
                                <img class="dot-image" src="@Url.Content(Model.Picture[i])" alt="Foto van dit object" />
                            </div>
                        }
                    </div>

                </td>
                <td>
                    <table class="info-tabel">
                        <tr>
                            <td class="title-name"> @Model.Name</td>
                        </tr>
                        <tr>
                            <td class="title">Ingredients :<br /></td>
                            <td class="beschrijving">@Model.Ingredients</td>
                        </tr>
                        <tr>
                            <td class="title">Price :<br /></td>
                            <td class="beschrijving">@Model.Price</td>
                        </tr>
                    </table>
                </td>
                <td>
                    @if (user != null && user.Email != "samirobeido76@gmail.com")
                    {
                        <p>
                            @Html.ActionLink("Order", "AddOrder", "Order", new { id = product.Id, userid = user.Id, hostid = 8 }, null)
                        </p>
                    }
                </td>
            </tr>
        </table>

    </div>
}


