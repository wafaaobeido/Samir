@using Models
@model IEnumerable<Models.ViewModelMessages>

@{
    /**/

    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@{
    var user = Session["User"] as User;
}

@if (Model.First().SenderID != user.Id)
{

    <h2>Index</h2>

    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Productid)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SenderID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RecipientID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NumberOfMessages)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Productid)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SenderID)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.RecipientID)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NumberOfMessages)
                </td>
                <td>
                    @Html.ActionLink("Details", "OneConversation", "User", new { recipientid = item.RecipientID, senderid = item.SenderID, productid = item.Productid }, null)
                </td>
            </tr>
        }
    </table>
}
else
{
    <h2>Sent</h2>

    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Productid)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SenderID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RecipientID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NumberOfMessages)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Productid)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SenderID)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.RecipientID)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NumberOfMessages)
                </td>
                <td>
                    @Html.ActionLink("Details", "OneConversation", "User", new { recipientid = item.RecipientID, senderid = item.SenderID, productid = item.Productid }, null)
                </td>
            </tr>
        }
    </table>
}
